<UserControl x:Class="WINI_Tool.Controls.MultiPathSelectionTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WINI_Tool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DarkModeDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>

    <StackPanel x:Name="StackPanel_RemovablePaths">

        <Button x:Name="Button_AddPath"
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                Style="{StaticResource Button_DarkMode}"
                Margin="{StaticResource Button_Margin}"
                FontSize="10"
                Width="100"
                Content="Add Path"
                Click="Button_AddPath_Click"/>

    </StackPanel>
</UserControl>
